extends base.pug
include mixins/video

block content
    main.search-middle
        form(method="GET").search__form
            input(placeholder="Search by title",name="keyword", type="text")
            button
                i.fas.fa-search

        div.video-grid
            each video in videos 
                +video(video)
            else
                span.empty__message Come and take a lookie !